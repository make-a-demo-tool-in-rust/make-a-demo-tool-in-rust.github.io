<?xml version="1.0" encoding="UTF-8"?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">

<% sitemap.resources.each do |page| %>
  <% if page.path.include? ".html" %>
    <url>
      <loc><%= data.book.domain + page.url %></loc>
      <priority>0.5</priority>
    </url>
  <% end %>
<% end %>
</urlset>
